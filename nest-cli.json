{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
        {
          "include": "../src/database/migrations/*",
          "outDir": "./dist/src"
        },
        {
          "include": "../src/modules/mail/templates/*",
          "outDir": "./dist/src"
        },
        {
            "include": "../src/modules/pac-connector/modules/**/**/*.proto",
            "outDir": "./dist/src"
          }
      ]
  
  }
}
